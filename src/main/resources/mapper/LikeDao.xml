<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuya.cyy.dao.LikeDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<!-- 插入Like  --> 
	<insert id="addLike" parameterType="Like">
			INSERT
			INTO
				like
			values(
				#{likeId},
				#{uid},
				#{answerId},
				#{likeTime},
				#{status}
				)
	</insert>
	
	<!-- 更新Like  --> 
	<update id="updateLike">
			UPDATE
				like
			SET
					uid=#{uid},
					answerId=#{answerId},
					likeTime=#{likeTime},
					status=#{status}
			WHERE
				likeId=#{likeId}
	</update>
	
	<!-- 根据uid查询Like -->
	<select id="selectLikeByUid" resultType="Like">
		SELECT
			*
		FROM
			like
		WHERE
			uid=#{uid}
	</select>


	<!-- 根据likeId查询Like -->
	<select id="selectLikeByLikeId" resultType="Like">
		SELECT
			*
		FROM
			like
		WHERE
			likeId=#{likeId}
	</select>
	
	<!-- 根据likeId查询Like -->
	<select id="selectLikeByAnswerId" resultType="Like">
		SELECT
			*
		FROM
			like
		WHERE
			answerId=#{answerId}
	</select>

</mapper>