<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuya.cyy.dao.SecretQuestionDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->

	<insert id="addQuestion" parameterType="SecretQuestion">
		INSERT
		INTO
			secret_question
		values(
			#{questionId},
			#{uid},
			#{questionInfo},
			#{answerInfo},
			#{status}
		)
	</insert>
	<!-- 改删除状态为1 -->
	<update id="deleteQuestion">
		UPDATE
			secret_question
		SET
			status=#{status}
		WHERE
			questionId=#{questionId}
	</update>

	<update id="deleteAllQuestion">
		UPDATE
			secret_question
		SET
			status=#{status}
		WHERE
			uid=#{uid}
	</update>
	
	<update id="updateQuestionByQid" parameterType="SecretQuestion">
		UPDATE
			secret_question
		SET
			answerInfo=#{answerInfo}
		WHERE
			questionId=#{questionId}
	</update>


	<select id="queryByUid" resultType="SecretQuestion">
		SELECT
			*
		FROM
			secret_question
		WHERE
			uid=#{uid}
	</select>
	
	<select id="queryByQid" resultType="SecretQuestion">
		SELECT
			*
		FROM
			secret_question
		WHERE
			questionId=#{qid}
	</select>
	
</mapper>