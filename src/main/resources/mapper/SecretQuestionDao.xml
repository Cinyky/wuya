<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuya.cyy.dao.SecretQuestionDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->

	<insert id="addQuestion" parameterType="SecretQuestion">
		INSERT
		INTO
			secret_question
		values(
			#{questionId},
			#{uid},
			#{questionInfo},
			#{answerInfo},
			#{status}
		)
	</insert>
	<!-- 改删除状态为1 -->
	<update id="deleteQuestion" parameterType="SecretQuestion">
		UPDATE
			secret_question
		SET
			status=#{status}
		WHERE
			questionId=#{questionId}
	</update>

	<update id="deleteAllQuestion" >
		UPDATE
			secret_question
		SET
			status=#{status}
		WHERE
			uid=#{uid}
	</update>
	
	<update id="updateQuestion" parameterType="SecretQuestion">
		UPDATE
			secret_question
		SET
			questionInfo=#{questionInfo},
			answerInfo=#{answerInfo}
		WHERE
			questionId=#{questionId}
	</update>








	<select id="queryByUid" resultType="SecretQuestion">
		SELECT
			*
		FROM
			secret_question
		WHERE
			uid=#{uid}
	</select>
	
	

	<update id="reduceNumber">
		UPDATE book
		SET number = number - 1
		WHERE
		book_id = #{bookId}
		AND number > 0
	</update>
</mapper>