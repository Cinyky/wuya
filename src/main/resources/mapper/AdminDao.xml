<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuya.cyy.dao.AdminDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<!-- 插入admin  --> 
	<insert id="addAdmin" parameterType="Admin">
			INSERT
			INTO
				admin
			values(
				#{uid},
				#{loginName},
				#{pwd}
				)
	</insert>
	
	<!-- 更新admin  --> 
	<update id="updateAdmin">
			UPDATE
				admin
			SET
				loginName = #{loginName},
				pwd = #{pwd}
					WHERE
				uid = #{uid}
	</update>
	
	<!-- 根据用户Id&pwd查询admin -->
	<select id="selectUserByUidAndPwd" resultType="Admin">
		SELECT
			*
		FROM
			admin
		WHERE
			loginName=#{loginName}
		AND
			pwd=#{pwd}
	</select>


</mapper>