<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuya.cyy.dao.ReportDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<!-- 插入report  --> 
	<insert id="addReport" parameterType="Report">
			INSERT
			INTO
				report
			values(
					#{reportId},
					#{uid},
					#{reportType},
					#{id},
					#{reportInfo},
					#{reportTime},
					#{status}
				)
	</insert>
	
	<!-- 更新report  --> 
	<update id="updateReport">
			UPDATE
				report
			SET
					uid=#{uid},
					reportType=#{reportType},
					id=#{id},
					reportInfo=#{reportInfo},
					reportTime=#{reportTime},
					status=#{status}
			WHERE
				reportId=#{reportId}
	</update>
	
	<!-- 根据uid查询report -->
	<select id="selectReportByUid" resultType="Report">
		SELECT
			*
		FROM
			report
		WHERE
			uid=#{uid}
	</select>


	<!-- 根据reportId查询report -->
	<select id="selectReportByReportId" resultType="Report">
		SELECT
			*
		FROM
			report
		WHERE
			reportId=#{reportId}
	</select>
	
	<!-- 根据questionInfo查询report -->
	<select id="selectReportByInfo" resultType="Report">
		SELECT
			*
		FROM
			report
		WHERE
			reportInfo like'%#{reportInfo}%}
	</select>
	
	
	<!-- 根据uid reportType查询report -->
	<select id="selectReportByTypeAndUid" resultType="Report">
		SELECT
			*
		FROM
			report
		WHERE
			uid=#{uid}
			AND
			reportType=#{reportType}
	</select>

</mapper>