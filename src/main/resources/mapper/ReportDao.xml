<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuya.cyy.dao.AnswerDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<!-- 插入Report  --> 
	<insert id="addReport" parameterType="Report">
			INSERT
			INTO
				question
			values(
					#{reportId},
					#{uid},
					#{reportType},
					#{id},
					#{reportInfo},
					#{reportTime},
					#{status}
				)
	</insert>
	
	<!-- 更新Report  --> 
	<update id="updateReport">
			UPDATE
				question
			SET
					uid=#{uid},
					reportType=#{reportType},
					id=#{id},
					reportInfo=#{reportInfo},
					reportTime=#{reportTime},
					status=#{status}
			WHERE
				reportId=#{reportId}
	</update>
	
	<!-- 根据uid查询Question -->
	<select id="selectReportByUid" resultType="Report">
		SELECT
			*
		FROM
			question
		WHERE
			uid=#{uid}
	</select>


	<!-- 根据QuestionId查询Question -->
	<select id="selectQuestionByQuestionId" resultType="Report">
		SELECT
			*
		FROM
			question
		WHERE
			questionId=#{questionId}
	</select>
	
	<!-- 根据QuestionId查询Report -->
	<select id="selectQuestionByInfo" resultType="Report">
		SELECT
			*
		FROM
			question
		WHERE
			questionInfo like'%#{questionInfo}%}
	</select>
	
	
	<!-- 根据QuestionId查询Report -->
	<select id="selectQuestionByTopicId" resultType="Report">
		SELECT
			*
		FROM
			question
		WHERE
			topicId=#{topicId}
	</select>

</mapper>